{{> layout/header}}

<!-- boardList -->
<section class="mw-1000 d-flex justify-content-center"
         style="padding: 20px; background-color: #f8f9fa; padding: 30px 200px;">

    <div class="container bg-white p-3 rounded-3">
        <div class="board_title">
            <h1><strong>커뮤니티 게시판</strong></h1>
            <div class="board_subtitle">
                <p>여러분의 의견을 자유롭게 작성해 주세요!</p>
            </div>
        </div>
        <table style="width: 100%; min-width: 320px; margin-bottom: 30px;">
            <tr style="background-color: antiquewhite; border-top: 1px solid #999; border-bottom:1px solid #999;">
                <th style="padding: 10px; text-align: center;">번호</th>
                <th style="padding: 10px; text-align: center;">제목</th>
                <th style="padding: 10px; text-align: center;">작성자</th>
                <th style="padding: 10px; text-align: center;">작성일</th>

            </tr>
            {{#boardList}}
                <tr style="border-bottom: 1px solid #ddd;">
                    <td style="padding: 10px; text-align: center;">{{id}}</td>

                    <td style="padding: 10px; text-align: center;"><a href="/boards/{{id}}/detail">{{title}}</a></td>
                    <td style="padding: 10px; text-align: center;">{{username}}</td>

                    <td style="padding: 10px; text-align: center;">{{createdAt}}</td>
                </tr>
            {{/boardList}}
        </table>

        <ul class="pagination d-flex justify-content-center">
                <li class="page-item {{#hasNext}}disabled{{/hasNext}}"><a class="page-link text-black" href="?page={{previousPage}}&size={{size}}&sortBy={{sortBy}}&direction={{direction}}">이전</a></li>

            {{#pages}}
                {{#current}}
                    <li class="page-item active"><a class="page-link text-black" href="#">{{.}}</a></li>
                {{/current}}
                {{^current}}
                    <li class="page-item"><a class="page-link text-black" href="?page={{.}}&size={{size}}&sortBy={{sortBy}}&direction={{direction}}">{{.}}</a></li>
                {{/current}}
            {{/pages}}
                <li class="page-item {{#hasPrevious}}disabled{{/hasPrevious}}"><a class="page-link text-black" href="?page={{nextPage}}&size={{size}}&sortBy={{sortBy}}&direction={{direction}}">다음</a></li>

        </ul>
        <div class="bt_wrap" style="text-align: center;">
            <a href="/board/save-form" class="on"
               style="display: inline-block; padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border: none; margin-right: 10px;">등록</a>
            <a href="/" class="on"
               style="display: inline-block; padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border: none;">홈</a>
        </div>

        <form action="/board" method="get" class="d-flex justify-content-end mb-30">
            <input class="me-3" type="text" placeholder="제목을 입력하세요" name="keyword">
            <button class="btn btn-primary" type="submit">검색</button>
        </form>
    </div>
</section>
{{> layout/footer}}