{{> layout/header}}
<main class="box">
    <div class="box_ui bg-light" style="padding: 30px 200px;">
        <div class="ui_content d-flex justify-content-center">
            <div class="content_list" style="width: calc(100% - 300px);">
                <div id="list_user_modify"
                     class="list_item d-flex justify-content-center flex-column w-100 bg-white rounded-3"
                     style="margin-right: 20px; padding: 20px;">
                    <div class="item_resume">
                        <span class="resume_correction h5 fw-bold">내 이력서</span>
                        <div class="correction_list p-3 d-flex pt-0 border-top pt-3 mt-3 flex-column">
                            {{#resumeList}}
                                <div class="w-100">
                                    <div class="card mb-3">
                                        <div class="card-body d-flex justify-content-between text-secondary m-2">
                                            <div class="d-flex justify-content-start">
                                                <div class="content_logo h-100" style="width: 100px;">
                                                    <img class="logo_size mw-100 w-100"
                                                         src="/images/{{image}}">
                                                </div>
                                                <div>
                                                    <p class="card-title mb-0"><strong>{{title}}
                                                    </strong></p>
                                                    <p class="card-text mb-0"><small>이름 : {{username}}</small></p>
                                                    <p class="card-text"><small>보유 기술 : {{#skills}}
                                                        [ {{name}} ] {{/skills}}</small></p>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <form class="mb-2" action="/apply/{{id}}/resumeSave" method="get">
                                                    <input id="resumeId" name="resumeId" type="hidden" value="{{id}}">
                                                    <button id="resumeBtn" class="btn btn-outline-secondary w-100">선택하기</button>
                                                </form>
                                                <a href="/resume/{{id}}/detailForm"
                                                   class="btn btn-outline-secondary w-100 mb-2">상세보기
                                                </a>
                                                <form action=" resume/{{id}}/delete" method="post">
                                                    <button class="btn btn-outline-secondary w-100">삭제
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/resumeList}}


                            {{#noticeList}}
                                <div class="item_result border-0 w-100 d-flex border-top border-dark" style="padding: 20px 0px;">
                                    <div class="content_logo h-100" style="width: 100px;">
                                        <img class="logo_size mw-100 w-100"
                                             src="/images/{{image}}">
                                    </div>
                                    <div class="content_item" style="width: calc(100% - 120px);">
                                        <div class="item_box d-flex justify-content-between ml-5" style="min-height: 10px;">
                                            <div class="logo_name">
                                                <a class="name_company h5 fs-5 text-black text-decoration-none"
                                                   href="/notices/{{id}}/detail">회사이름</a>
                                                <div class="name_intrd text-black-50">회사소개</div>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="content_detail">
                                            <div class="detail_job_name">
                                                <a class="text-black text-decoration-none"
                                                   href="/notices/{{id}}/detail">{{title}}</a>
                                            </div>
                                            <div class="detail_job_dates">마감일 : {{deadline}}</div>
                                        </div>
                                    </div>
                                </div>
                            {{/noticeList}}


                        </div>
                    </div>
                </div>
            </div>
            {{> layout/sidebar}}
        </div>
    </div>
</main>

{{> layout/footer}}