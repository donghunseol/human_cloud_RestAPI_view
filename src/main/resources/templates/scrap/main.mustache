{{> layout/header}}

<main class="box">
    <div class="box_ui bg-light" style="padding: 30px 200px;">
        <div class="ui_content d-flex justify-content-center">
            <div class="content_list" style="width: calc(100% - 300px);">
                <!-- 스크랩 페이지 화면 -->
                <section class="content d-flex justify-content-center">
                    <div class="container"
                         style="padding: 0 39px 39px; background-color: #fff; border: 1px solid #dce1eb;">
                        <div class="scrap_title"
                             style="font-weight: bold; font-size: 20px; line-height: 140%; color: #333; letter-spacing: -0.2px; margin: 60px 0 20px 0;">
                            <h3 class="scrap_title_1">스크랩 공고</h3>
                            <div class="scrap_sort"
                                 style="padding-left: 11px; margin-top: 30px; font-size: 0;">
                                <p class="scrap_subtitle"
                                   style="display: inline-block; margin-right: 6px; font-size: 13px; color: #888; vertical-align: middle;">
                                    "전체 4개"
                                    <span style="padding-left: 15px; color: #272727;">※ 최근 1년 동안 스크랩한 공고를 열람할 수 있습니다.</span>
                                </p>
                            </div>
                        </div>
                        <div class="script_item" style="width: 100%; margin-top: 25px;">
                            <hr>
                            {{#scrapList}}
                                <!-- 스크랩 목록 -->
                                <div class="w-100">
                                    <div class="card mb-3">
                                        <div class="card-body d-flex justify-content-between text-secondary m-2">
                                            <div>
                                                <div class="company_name h5 fs-5">{{noticeUsername}}</div>
                                                <div class="company_notice fw-bold" style="font-size: 18px;">{{title}}
                                                </div>
                                                <div class="company_request mt-2 mr-5"
                                                     style="display: block; font-size: 13px; vertical-align: middle;">
                                                    {{type}}
                                                </div>
                                                <div class="company_date mt-2 mr-5"
                                                     style="display: block; color: #88A; vertical-align: middle;">
                                                    기간 {{deadline}}
                                                </div>
                                            </div>
                                            <div class="d-flex flex-column h-100">
                                                <form action="/notice/{{noticeId}}" method="get">
                                                    <button class="btn btn-outline-secondary mb-1 w-100">상세보기</button>
                                                </form>
                                                <form action="/scrap/{{id}}/delete" method="post">
                                                    <button class="btn btn-outline-secondary w-100">삭제</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/scrapList}}
                        </div>
                    </div>
                </section>
            </div>
            {{> layout/sidebar}}
        </div>
